script {
    env.DOCKER_IMG = 'test'
} 
pipeline {
    agent any

    stages {

        stage ("Checkout") {
            steps {
                checkout scm
            }
        }

        stage ("Test") {
            steps {
                dir("src") {
                    dir ("yase-core") {
                        sh "docker build -t yase-core-tests"
                    }
                    script {
                    }
                }
            }
        }

        stage ("Build") {
            steps {
                dir("src") {
                    dir ("yase-core") {
                        sh "docker build -t yase-core"
                    }
                    script {
                    }
                }
            }
        }

        stage ("Publis") {
            steps {
                sh "docker tag yase-core francomelandri/yase-core"
//                sh "docker login"
//                sh "docker push francomelandri/yase-core"
            }
        }
    }
}